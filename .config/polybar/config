label-disconnected-background = ${colors.red}

ramp-signal-0 = " %{F#cc241d}󰤫%{F-} "
ramp-signal-1 = " 󰤟 "
ramp-signal-2 = " 󰤢 "
ramp-signal-3 = " 󰤥 "
ramp-signal-4 = " 󰤨 "
